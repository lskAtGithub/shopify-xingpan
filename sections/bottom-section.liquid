{% comment %}
  Custom Bottom Section (bottom-section)
{% endcomment %}

<section class="bottom-section">
  <div class="bottom-section-container">
    <h2 class="heading">Join the 11STARS Cosmic Community</h2>
    <p class="subtext">
      Connect with fellow cosmic enthusiasts, receive exclusive astrological insights, 
      and be the first to know about new crystal art collections and special offers.
    </p>
    
    <form class="newsletter-form">
      <input 
        type="email" 
        placeholder="Enter your email address" 
        required
      >
      <button type="submit">Join Our Newsletter</button>
    </form>

    <div class="features">
      <div class="p-5 bg-white/5 rounded-lg feature">
        {% if section.settings.feature1_icon != blank %}
          <img src="{{ section.settings.feature1_icon | image_url: width: 64 }}" alt="{{ section.settings.feature1_title }}" class="feature-icon" />
        {% else %}
          <i class="fa fa-moon-o text-3xl text-fire mb-4"></i>
        {% endif %}
        <h3 class="font-bold mb-2">{{ section.settings.feature1_title }}</h3>
        <p class="text-sm text-gray-400">{{ section.settings.feature1_text }}</p>
      </div>
      <div class="p-5 bg-white/5 rounded-lg feature">
        {% if section.settings.feature2_icon != blank %}
          <img src="{{ section.settings.feature2_icon | image_url: width: 64 }}" alt="{{ section.settings.feature2_title }}" class="feature-icon" />
        {% else %}
          <i class="fa fa-moon-o text-3xl text-fire mb-4"></i>
        {% endif %}
        <h3 class="font-bold mb-2">{{ section.settings.feature2_title }}</h3>
        <p class="text-sm text-gray-400">{{ section.settings.feature2_text }}</p>
      </div>
      <div class="p-5 bg-white/5 rounded-lg feature">
        {% if section.settings.feature3_icon != blank %}
          <img src="{{ section.settings.feature3_icon | image_url: width: 64 }}" alt="{{ section.settings.feature3_title }}" class="feature-icon" />
        {% else %}
          <i class="fa fa-moon-o text-3xl text-fire mb-4"></i>
        {% endif %}
        <h3 class="font-bold mb-2">{{ section.settings.feature3_title }}</h3>
        <p class="text-sm text-gray-400">{{ section.settings.feature3_text }}</p>
      </div>
      <div class="p-5 bg-white/5 rounded-lg feature">
        {% if section.settings.feature4_icon != blank %}
          <img src="{{ section.settings.feature4_icon | image_url: width: 64 }}" alt="{{ section.settings.feature4_title }}" class="feature-icon" />
        {% else %}
          <i class="fa fa-moon-o text-3xl text-fire mb-4"></i>
        {% endif %}
        <h3 class="font-bold mb-2">{{ section.settings.feature4_title }}</h3>
        <p class="text-sm text-gray-400">{{ section.settings.feature4_text }}</p>
      </div>
    </div>

    <div class="social">
      <h3>Follow Us On Social Media</h3>
      <div class="icons">
        <a href="#"><i class="fa fa-instagram"></i></a>
        <a href="#"><i class="fa fa-facebook"></i></a>
        <a href="#"><i class="fa fa-pinterest"></i></a>
        <a href="#"><i class="fa fa-twitter"></i></a>
        <a href="#"><i class="fa fa-youtube"></i></a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Bottom Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "feature1_icon",
      "label": "Feature 1 Icon"
    },
    {
      "type": "text",
      "id": "feature1_title",
      "label": "Feature 1 Title",
      "default": "Monthly Horoscopes"
    },
    {
      "type": "text",
      "id": "feature1_text",
      "label": "Feature 1 Description",
      "default": "Personalized insights based on your chart"
    },

    {
      "type": "image_picker",
      "id": "feature2_icon",
      "label": "Feature 2 Icon"
    },
    {
      "type": "text",
      "id": "feature2_title",
      "label": "Feature 2 Title",
      "default": "Crystal Guides"
    },
    {
      "type": "text",
      "id": "feature2_text",
      "label": "Feature 2 Description",
      "default": "Learn about crystal properties & uses"
    },

    {
      "type": "image_picker",
      "id": "feature3_icon",
      "label": "Feature 3 Icon"
    },
    {
      "type": "text",
      "id": "feature3_title",
      "label": "Feature 3 Title",
      "default": "Community Events"
    },
    {
      "type": "text",
      "id": "feature3_text",
      "label": "Feature 3 Description",
      "default": "Virtual workshops and crystal circles"
    },

    {
      "type": "image_picker",
      "id": "feature4_icon",
      "label": "Feature 4 Icon"
    },
    {
      "type": "text",
      "id": "feature4_title",
      "label": "Feature 4 Title",
      "default": "Exclusive Offers"
    },
    {
      "type": "text",
      "id": "feature4_text",
      "label": "Feature 4 Description",
      "default": "Member-only discounts and promotions"
    }
  ],
  "presets": [
    {
      "name": "Bottom Section"
    }
  ]
}
{% endschema %}
