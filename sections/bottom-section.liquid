{% comment %}
  Custom Bottom Section (bottom-section)
{% endcomment %}

<section class="bottom-section">
  <div class="container">
    <h2 class="heading">Join the 11STARS Cosmic Community</h2>
    <p class="subtext">
      Connect with fellow cosmic enthusiasts, receive exclusive astrological insights, 
      and be the first to know about new crystal art collections and special offers.
    </p>
    
    <form class="newsletter-form">
      <input 
        type="email" 
        placeholder="Enter your email address" 
        required
      >
      <button type="submit">Join Our Newsletter</button>
    </form>

    <div class="features">
      <div class="feature">
        <i class="fa fa-moon-o"></i>
        <h3>Monthly Horoscopes</h3>
        <p>Personalized insights based on your chart</p>
      </div>
      <div class="feature">
        <i class="fa fa-gem"></i>
        <h3>Crystal Guides</h3>
        <p>Learn about crystal properties & uses</p>
      </div>
      <div class="feature">
        <i class="fa fa-users"></i>
        <h3>Community Events</h3>
        <p>Virtual workshops and crystal circles</p>
      </div>
      <div class="feature">
        <i class="fa fa-gift"></i>
        <h3>Exclusive Offers</h3>
        <p>Member-only discounts and promotions</p>
      </div>
    </div>

    <div class="social">
      <h3>Follow Us On Social Media</h3>
      <div class="icons">
        <a href="#"><i class="fa fa-instagram"></i></a>
        <a href="#"><i class="fa fa-facebook"></i></a>
        <a href="#"><i class="fa fa-pinterest"></i></a>
        <a href="#"><i class="fa fa-twitter"></i></a>
        <a href="#"><i class="fa fa-youtube"></i></a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Bottom Section",
  "settings": [],
  "presets": [
    {
      "name": "Bottom Section"
    }
  ]
}
{% endschema %}
