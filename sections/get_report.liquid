<section class="custom-image-form">
  <div class="container">
    <div class="flex-wrapper">
      <!-- 左边：图片 -->
      <div class="image-side">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | image_url: width: 800 }}" alt="custom image" />
        {% else %}
          <div class="placeholder">请上传图片</div>
        {% endif %}
      </div>

      <!-- 右边：表单 -->
      <div class="form-side">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}

        {% if section.settings.text != blank %}
          <p>{{ section.settings.text }}</p>
        {% endif %}

        <form method="post" action="#">
          <input type="text" name="name" placeholder="请输入姓名" required>
          <input type="email" name="email" placeholder="请输入邮箱" required>
          <button type="submit">{{ section.settings.button_text }}</button>
        </form>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "报告区域",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "左侧图片"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "表单标题",
      "default": "联系我们"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "表单描述",
      "default": "留下联系方式，我们会尽快回复您。"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "按钮文本",
      "default": "提交"
    }
  ],
  "presets": [
    {
      "name": "图片 + 表单布局",
      "category": "自定义模块"
    }
  ]
}
{% endschema %}
