<link rel="stylesheet" href="{{ 'recommend.css' | asset_url }}">

<section class="recommend-section">
  <div class="recommend-header">
    <h2>{{ section.settings.section_title }}</h2>
    <p>{{ section.settings.section_subtitle }}</p>
  </div>

  {% for crystal in section.blocks %}
  <div class="crystal-item {{ crystal.settings.element | downcase }}">
    <div class="crystal-grid">
      <!-- 图片 -->
      <div class="crystal-image">
        <div class="crystal-img-container">
          <img src="{{ crystal.settings.image | img_url: 'master' }}" alt="{{ crystal.settings.title }}" class="crystal-img">
          <div class="element-badge {{ crystal.settings.element | downcase }}">
            {{ crystal.settings.element }} Element
          </div>
        </div>
      </div>

      <!-- 文字 -->
      <div class="crystal-text">
        <h3>{{ crystal.settings.title }}</h3>
        <p>{{ crystal.settings.description }}</p>
        <div class="features">
          {% for i in (1..3) %}
            {% assign feature = crystal.settings["feature_" | append: i] %}
            {% if feature != blank %}
            <div>
              <i class="fa fa-check-circle feature-icon"></i>
              <span>{{ feature }}</span>
            </div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="crystal-actions">
          <span class="price">${{ crystal.settings.price }}</span>
          <button class="btn btn-add">Add to Cart</button>
          <button class="btn btn-view"><i class="fa fa-eye"></i></button>
        </div>
      </div>
    </div>
  </div>
  {% endfor %}
</section>

{% schema %}
{
  "name": "Recommend",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Elemental Crystal Art"
    },
    {
      "type": "textarea",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "Each piece is infused with energy to balance your elemental composition, handcrafted with natural crystals and premium materials."
    }
  ],
  "blocks": [
    {
      "type": "crystal",
      "name": "Crystal Item",
      "settings": [
        {
          "type": "text",
          "id": "element",
          "label": "Element Name",
          "default": "Fire"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Ignite Passion"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Our Fire Element crystal art captures the essence of transformation and vitality."
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price",
          "default": "129"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Crystal Image"
        },
        {
          "type": "text",
          "id": "feature_1",
          "label": "Feature 1"
        },
        {
          "type": "text",
          "id": "feature_2",
          "label": "Feature 2"
        },
        {
          "type": "text",
          "id": "feature_3",
          "label": "Feature 3"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Recommend"
    }
  ]
}
{% endschema %}
