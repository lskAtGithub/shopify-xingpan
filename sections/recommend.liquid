<!-- sections/recommend.liquid -->
<section class="recommend-section">
  {% for crystal in section.blocks %}
    {% assign is_even = forloop.index | modulo: 2 %}
    <div class="crystal-block">
      <div class="crystal-item {% if is_even == 0 %}reverse{% endif %}">
        <div class="crystal-image">
          {% if crystal.settings.image %}
            <img src="{{ crystal.settings.image | img_url: '1200x' }}" alt="{{ crystal.settings.title }}">
          {% endif %}
        </div>
        <div class="crystal-text">
          <h3>{{ crystal.settings.title }}</h3>
          <p>{{ crystal.settings.description }}</p>
          <!-- 你可以在这里继续添加 feature、按钮等元素 -->
        </div>
      </div>
    </div>
  {% endfor %}
</section>

<!-- Section schema -->
{% schema %}
{
  "name": "Recommend Section",
  "settings": [],
  "blocks": [
    {
      "type": "crystal",
      "name": "Crystal Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Recommend Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
