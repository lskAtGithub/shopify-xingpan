<style>
  .section-{{ section.id }} {
    --background-color: {{ section.settings.background_color }};
    --text-color: {{ section.settings.text_color }};
    background-color: var(--background-color);
    color: var(--text-color);
  }
</style>

<div class="page-width section-{{ section.id }}">
  <div class="custom-featured-product__header">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <div class="rte">{{ section.settings.subheading }}</div>
    {% endif %}
  </div>

  {%- assign product = section.settings.featured_product -%}

  {% if product != blank %}
    <div class="custom-featured-product__content-grid">
      <div class="custom-featured-product__image-wrapper">
        {% if section.settings.badge_text != blank %}
          <div class="custom-featured-product__badge">{{ section.settings.badge_text }}</div>
        {% endif %}

        {% if product.featured_media %}
          {{
            product.featured_media
            | image_url: width: 1000
            | image_tag: loading: 'lazy', widths: '300, 400, 600, 800, 1000', sizes: '(max-width: 768px) 100vw, 50vw'
          }}
        {% else %}
          {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>

      <div class="custom-featured-product__info">
        {%- assign title = section.settings.product_title_override | default: product.title -%}
        <h3>{{ title }}</h3>

        {%- assign description = section.settings.product_description_override | default: product.description -%}
        <div class="rte">{{ description }}</div>

        {% if section.blocks.size > 0 %}
          <ul class="custom-featured-product__features-list">
            {% for block in section.blocks %}
              <li>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="icon-checkmark"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
                <span>{{ block.settings.text }}</span>
              </li>
            {% endfor %}
          </ul>
        {% endif %}

        <div class="custom-featured-product__price-and-cta">
          <span class="price">{{ product.price | money }}</span>
          <div class="buttons-wrapper">
            {%- assign current_variant = product.selected_or_first_available_variant -%}
            <form
              method="post"
              action="/cart/add"
              accept-charset="UTF-8"
              enctype="multipart/form-data"
              novalidate="novalidate"
            >
              <input type="hidden" name="id" value="{{ current_variant.id }}">
              <button type="submit" class="button button--primary">Add to Cart</button>
            </form>
            <a href="{{ product.url }}" class="button button--secondary">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="icon-eye"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  {% else %}
    <p>请在后台设置中选择一个特色产品。</p>
  {% endif %}
</div>
{% schema %}
{
  "name": "特色产品展示",
  "tag": "section",
  "class": "section-custom-featured-product",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "全局标题",
      "default": "Elemental Crystal Art"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "全局描述",
      "default": "<p>Each piece is infused with energy to balance your elemental composition, handcrafted with natural crystals and premium materials.</p>"
    },
    {
      "type": "product",
      "id": "featured_product",
      "label": "选择特色产品"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "图片徽章文本",
      "default": "Fire Element"
    },
    {
      "type": "text",
      "id": "product_title_override",
      "label": "产品标题 (覆盖)",
      "info": "留空则使用产品的默认标题"
    },
    {
      "type": "richtext",
      "id": "product_description_override",
      "label": "产品描述 (覆盖)",
      "info": "留空则使用产品的默认描述"
    },
    {
      "type": "header",
      "content": "颜色设置"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "背景颜色",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "文本颜色",
      "default": "#333333"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "特性",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "特性描述",
          "default": "Handcrafted"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "特色产品展示",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.custom-featured-product__header {
  text-align: center;
  margin-bottom: 50px;
}

.custom-featured-product__header h2 {
  font-size: 2.5rem;
  margin-bottom: 15px;
}

.custom-featured-product__header .rte {
  font-size: 1rem;
  max-width: 600px;
  margin: 0 auto;
}

.custom-featured-product__content-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: center;
}

.custom-featured-product__image-wrapper {
  position: relative;
  border-radius: 10px;
  overflow: hidden;
}

.custom-featured-product__image-wrapper img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.custom-featured-product__badge {
  position: absolute;
  top: 20px;
  left: 20px;
  background-color: #FBBF24; /* Yellow color from image */
  color: #1F2937;
  padding: 8px 16px;
  border-radius: 9999px;
  font-weight: 600;
  z-index: 2;
}

.custom-featured-product__info h3 {
  font-size: 2.2rem;
  margin-bottom: 15px;
}

.custom-featured-product__info .rte {
  font-size: 1rem;
  line-height: 1.6;
  margin-bottom: 25px;
}

.custom-featured-product__features-list {
  list-style: none;
  padding: 0;
  margin: 0 0 30px 0;
}

.custom-featured-product__features-list li {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.custom-featured-product__features-list .icon-checkmark {
  width: 20px;
  height: 20px;
  color: #FBBF24;
  margin-right: 10px;
  flex-shrink: 0;
}

.custom-featured-product__price-and-cta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 20px;
}

.custom-featured-product__price-and-cta .price {
  font-size: 2rem;
  font-weight: 700;
}

.custom-featured-product__price-and-cta .buttons-wrapper {
  display: flex;
  gap: 10px;
}

/* Base button styles - adjust to your theme */
.button {
  padding: 12px 24px;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 600;
  border: 1px solid transparent;
  cursor: pointer;
  transition: all 0.2s ease;
}
.button--primary {
  background-color: #FBBF24;
  color: #1F2937;
}
.button--primary:hover {
  opacity: 0.85;
}
.button--secondary {
  background-color: transparent;
  border-color: #E5E7EB;
  padding: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.button--secondary .icon-eye {
  width: 24px;
  height: 24px;
}
.button--secondary:hover {
  border-color: #D1D5DB;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .custom-featured-product__content-grid {
    grid-template-columns: 1fr;
    gap: 40px;
  }
}
{% endstylesheet %}
