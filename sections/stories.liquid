{% schema %}
{
  "name": "Stories of Elements",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Side Image"
    }
  ],
  "blocks": [
    {
      "type": "story",
      "name": "Element Story",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "The Fire: Transformation & Passion"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Discover how fire represents our life force, creativity, and ability to transform energy into action."
        },
        {
          "type": "text",
          "id": "icon",
          "label": "Font Awesome Icon Class",
          "default": "fa-fire"
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background Color",
          "default": "#fff0f0"
        },
        {
          "type": "color",
          "id": "border_color",
          "label": "Border Color",
          "default": "#ffcccc"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#ff0000"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Stories of Elements",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="stories-section py-20 px-4">
  <div class="container mx-auto max-w-7xl">
    <div class="flex flex-col md:flex-row gap-12 items-center">
      
      <!-- 左侧故事列表 -->
      <div class="flex-1 space-y-6">
        {% for block in section.blocks %}
          <div class="story-item rounded-lg p-5 border" 
               style="background-color: {{ block.settings.bg_color }}; border-color: {{ block.settings.border_color }};">
            <div class="flex items-start">
              <div class="story-icon text-white p-2 rounded-full mr-4" style="background-color: {{ block.settings.border_color }}">
                <i class="fa {{ block.settings.icon }}"></i>
              </div>
              <div>
                <h3 class="story-title text-xl font-bold mb-2" style="color: {{ block.settings.text_color }}">
                  {{ block.settings.title }}
                </h3>
                <p class="story-desc text-gray-600 mb-3">
                  {{ block.settings.description }}
                </p>
                <a href="#" class="story-readmore font-medium hover:underline flex items-center">
                  Read More <i class="fa fa-long-arrow-right ml-2"></i>
                </a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <!-- 右侧图片 -->
      {% if section.settings.right_image %}
        <div class="flex-1 hidden md:block">
          <div class="story-img-container shadow-xl">
            <img src="{{ section.settings.right_image | img_url: '1024x' }}" 
                 alt="Stories illustration" class="story-img w-full rounded-lg">
          </div>
        </div>
      {% endif %}

    </div>
  </div>
</section>
