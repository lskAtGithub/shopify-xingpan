<!-- sections/stories.liquid -->
<link rel="stylesheet" href="{{ 'stories.css' | asset_url }}">

<section id="stories" class="stories-section">
  <div class="stories-container">
    <div class="stories-content">
      <h2 class="stories-title">{{ section.settings.heading }}</h2>
      <p class="stories-description">{{ section.settings.description }}</p>

      {% for block in section.blocks %}
        <div class="story-item" style="background-color: {{ block.settings.bg_color }}; border-color: {{ block.settings.border_color }};">
          <div class="story-icon" style="background-color: {{ block.settings.border_color }}; color: {{ block.settings.text_color }};">
            <i class="fa {{ block.settings.icon }}"></i>
          </div>
          <div class="story-text">
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.text }}</p>
            <a href="{{ block.settings.link }}" style="color: {{ block.settings.text_color }};">
              Read More <i class="fa fa-long-arrow-right"></i>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.image != blank %}
      <div class="stories-image">
        <img src="{{ section.settings.image | img_url: '800x960' }}" alt="{{ section.settings.heading }}">
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Stories Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Stories of the Four Elements"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Section Description",
      "default": "Ancient wisdom meets modern energyâ€”explore the origins and significance of fire, water, earth, and air in astrology and metaphysics."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right Side Image"
    }
  ],
  "blocks": [
    {
      "type": "story",
      "name": "Story Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "The Fire: Transformation & Passion"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Discover how fire represents our life force, creativity, and ability to transform energy into action."
        },
        {
          "type": "text",
          "id": "icon",
          "label": "FontAwesome Icon (e.g. fa-fire)",
          "default": "fa-fire"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Read More Link",
          "default": "#"
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background Color",
          "default": "#fdecef"
        },
        {
          "type": "color",
          "id": "border_color",
          "label": "Border/Icon Background",
          "default": "#fcdcdc"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Accent Text Color",
          "default": "#e63946"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
