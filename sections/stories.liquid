<!-- sections/stories.liquid -->
<link rel="stylesheet" href="{{ 'stories.css' | asset_url }}">

<section id="stories" class="stories-section">
  <div class="stories-container">
    <div class="stories-content">
      <h2 class="stories-title">Stories of the Four Elements</h2>
      <p class="stories-description">
        Ancient wisdom meets modern energyâ€”explore the origins and significance of fire, water, earth, and air in astrology and metaphysics.
      </p>

      {% assign default_stories = 
        "[{'title':'The Fire: Transformation & Passion','description':'Discover how fire represents our life force, creativity, and ability to transform energy into action.','icon':'fa-fire','bg':'#fdecef','border':'#fcdcdc','text':'#e63946','link':'#'},{'title':'The Water: Emotion & Intuition','description':'Explore the depths of water energy, governing our emotions, intuition, and subconscious mind.','icon':'fa-tint','bg':'#e0f7fd','border':'#b3e0f5','text':'#00b4d8','link':'#'},{'title':'The Earth: Stability & Abundance','description':'Understand how earth energy grounds us, providing stability, practicality, and connection to nature.','icon':'fa-leaf','bg':'#e8f5e9','border':'#c8e6c9','text':'#43a047','link':'#'},{'title':'The Air: Intellect & Communication','description':'Learn about air energy\'s connection to our thoughts, communication style, and intellectual pursuits.','icon':'fa-wind','bg':'#f0f4ff','border':'#d6e0ff','text':'#3f51b5','link':'#'}]" | parse_json %}

      {% for story in default_stories %}
      <div class="story-item" style="background-color: {{ story.bg }}; border-color: {{ story.border }};">
        <div class="story-icon" style="background-color: {{ story.border }}; color: {{ story.text }};">
          <i class="fa {{ story.icon }}"></i>
        </div>
        <div class="story-text">
          <h3>{{ story.title }}</h3>
          <p>{{ story.description }}</p>
          <a href="{{ story.link }}" style="color: {{ story.text }};">Read More <i class="fa fa-long-arrow-right"></i></a>
        </div>
      </div>
      {% endfor %}
    </div>

    <div class="stories-image">
      <img src="https://picsum.photos/id/1050/800/960" alt="Four elements illustration with cosmic background">
    </div>
  </div>
</section>
