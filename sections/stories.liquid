<section id="stories" class="py-20 px-4 sm:px-6 lg:px-8">
  <div class="container mx-auto max-w-7xl">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-[clamp(1.5rem,3vw,2.25rem)] font-bold mb-6">
          {{ section.settings.heading }}
        </h2>
        <p class="text-gray-600 text-lg mb-8">
          {{ section.settings.subheading }}
        </p>

        <div class="space-y-6">
          {% for block in section.blocks %}
            <div class="p-5 rounded-lg border transition-colors"
                 style="--color: {{ block.settings.color }}">
              <div class="flex items-start">
                <div class="p-2 rounded-full mr-4 text-white"
                     style="background-color: {{ block.settings.color }}">
                  <i class="{{ block.settings.icon }}"></i>
                </div>
                <div>
                  <h3 class="text-xl font-bold mb-2">{{ block.settings.title }}</h3>
                  <p class="text-gray-600 mb-3">{{ block.settings.description }}</p>
                  {% if block.settings.link != blank %}
                    <a href="{{ block.settings.link }}"
                       class="font-medium hover:underline flex items-center"
                       style="color: {{ block.settings.color }}">
                      Read More <i class="fa fa-long-arrow-right ml-2"></i>
                    </a>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

      <!-- 右侧图片 -->
      <div class="hidden md:block">
        {% if section.settings.right_image != blank %}
          <div class="story-img-container shadow-xl">
            <img src="{{ section.settings.right_image | image_url: width: 800 }}"
                 alt="{{ section.settings.heading }}"
                 class="story-img" loading="lazy">
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Stories",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Stories of the Four Elements"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Ancient wisdom meets modern energy—explore the origins and significance of fire, water, earth, and air in astrology and metaphysics."
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Side Image",
      "default": "shopify:\/\/shop_images\/your-default.jpg"
    }
  ],
  "blocks": [
    {
      "type": "story",
      "name": "Story",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Story Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Story Description"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Story Link"
        },
        {
          "type": "text",
          "id": "icon",
          "label": "Icon class (FontAwesome)",
          "default": "fa fa-fire"
        },
        {
          "type": "color",
          "id": "color",
          "label": "Theme Color",
          "default": "#e25822"
        }
      ]
    }
  ],
  "presets": [
    {
