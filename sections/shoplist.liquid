<section class="py-20 px-4 sm:px-6 lg:px-8 bg-gray-50">
  <div class="container mx-auto max-w-7xl">
    <div class="text-center mb-16">
      <h2 class="text-[clamp(1.5rem,3vw,2.25rem)] font-bold text-stars mb-4">Zodiac Crystal Collections</h2>
      <p class="text-gray-600 max-w-2xl mx-auto text-lg">
        Discover crystal art aligned with your zodiac sign, combining astrological energy with natural crystal properties.
      </p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      {% for product in collection.products %}
        <div class="bg-white rounded-xl overflow-hidden shadow-md card-hover">
          <div class="zodiac-img-container relative">
            {% if product.featured_media %}
              <img src="{{ product.featured_media | image_url: '400x400' }}" alt="{{ product.title }}" class="zodiac-img">
            {% endif %}
            {% assign tag = product.tags[0] %}
            {% if tag %}
              <div class="absolute top-4 left-4 bg-{{ tag | downcase }} text-white text-sm font-bold px-3 py-1 rounded-full">
                {{ tag }}
              </div>
            {% endif %}
          </div>
          <div class="p-5">
            <h3 class="font-bold text-lg mb-2">{{ product.title }}</h3>
            <p class="text-gray-600 text-sm mb-4">{{ product.description | strip_html | truncate: 50 }}</p>
            <div class="flex justify-between items-center">
              <span class="text-stars font-bold">{{ product.price | money }}</span>
              <form method="post" action="/cart/add">
                <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                <button type="submit" class="add-to-cart-btn bg-{{ tag | downcase }} text-white px-4 py-2 rounded-lg text-sm transition duration-300 hover:bg-{{ tag | downcase }}/90">
                  Add to Cart
                </button>
              </form>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="text-center mt-12">
      <a href="/collections/{{ collection.handle }}" class="view-all-btn border-2 border-stars text-stars hover:bg-stars hover:text-white px-8 py-3 rounded-lg transition duration-300 font-medium">
        View All Zodiac Collections
      </a>
    </div>
  </div>
</section>
